#!/usr/bin/env bash
# dotfiles edition

if [[ -z "$1"  ]]
then
echo "vim to dotfile of...?"
echo " cdf = cdf itself"
echo " b= cd ~/.bash/"
echo " b a= ~/.bash/aliases"
echo " b f= ~/.bash/functions"
echo " v = ~/.vimrc"
echo " t = ~/.tmux.conf"
echo " e i= ~/.doom.d/init.el"
echo " e c= ~/.doom.d/config.el"
echo ""
echo "example: 'cdf v' is the same as"
echo "'vim $HOME/.vimrc'"
fi

if [[ "$1" == "cdf" ]]
then
vim $HOME/bin/cdf
fi

if [[ "$1" == "b" ]]
then
  if [[ "$2" == "a" ]]
  then
    vim $HOME/.bash/aliases
  fi

  if [[ "$2" == "f" ]]
  then
    vim $HOME/.bash/functions
  fi

  if [[ "$2" == "e" ]]
  then
    vim $HOME/.bash/env
  fi
fi

if [[ "$1" == "t" ]]
then
vim $HOME/.tmux.conf
fi

if [[ "$1" == "v" ]]
then
vim $HOME/.vimrc
fi

if [[ "$1" == "e" ]]
then
  if [[ "$2" == "i" ]]
  then
    vim $HOME/.doom.d/init.el
  fi
  if [[ "$2" == "c" ]]
  then
    vim $HOME/.doom.d/config.el
  fi
fi
