#!/usr/bin/env bash

set -o pipefail

cd "$HOME/org" || exit

if [[ "$1" == "lock" ]]
then
    7z a ~/org/auxRoam.7z ~/org/auxRoam
    gpg --output ~/org/auxRoam.7z.gpg --symmetric ~/org/auxRoam.7z
    rm -rf ~/org/auxRoam.7z
    mv ~/org/auxRoam.7z.gpg ~/Filen\ Sync/Vault/d/
fi

if [[ "$1" == "unlock" ]]
then
    cp ~/Filen\ Sync/Vault/d/auxRoam.7z.gpg ~/Downloads/test/org/
    gpg --output ~/Downloads/test/org/auxRoam.7z --decrypt ~/Downloads/test/org/auxRoam.7z.gpg
    7z x ~/Downloads/test/org/auxRoam.7z o ~/Downloads/test/org/auxRoam/
fi
