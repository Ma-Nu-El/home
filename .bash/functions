#!/usr/bin/env bash

set -o pipefail

manuclone(){
	if [[ -z "$1"  ]]
	then
		echo "example: 'manuclone foo bar' is the same as"
		echo "'git clone git@github.com:Ma-Nu-El/foo bar'"
	else
	git clone git@github.com:Ma-Nu-El/"$1"
	fi
}

#quick useful defaults

# smarter org
# https://unix.stackexchange.com/questions/6435/how-to-check-if-pwd-is-a-subdirectory-of-a-given-path
org(){
if [[ "$PWD" = "$HOME/org" ]]
then
cd org || exit
else
cd "$HOME"/org || exit
fi
}

# cd and git status into directory
cd-and-git-status(){
if [ -d "$1" ] # if argument is a directory
then
	cd "$1" || exit
	clear && pwd && echo "-----" && git status
else
	if [ -z "$1" ]
	then
		clear && pwd && git status
	fi
fi
}

# cd and ls
ue(){
cd "$1" && clear && pwd && echo '-----' && ls
}

# quick jumps to ~/myDrive
drive(){

if [[ "$1" ]]
then
    cd "$HOME"/myDrive/"$1" || exit
    pwd
fi

if [[ -z "$1" ]]
then
    cd "$HOME"/myDrive/ || exit
    pwd
fi

# HELP SYSTEM

if [[ $1 == '-h' || $1 == '--help' || $1 == '-?' || $1 == 'help' ]]
then
	echo "'~/bin/drive'"
	echo "Bash script for quick navigation to directories located in ~/myDrive"
	echo "USAGE"
	echo "    drive OPTIONS"
	echo "OPTIONS"
	echo "  --help, -h, -?, help"
	echo "      Display this page."
	echo "  foo"
	echo "      'cd ~/myDrive/foo"
	echo "  bar"
	echo "      'cd ~/myDrive/bar"
fi
}
